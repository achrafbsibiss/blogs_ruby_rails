<%= form_with model: blog_post do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message|%>
        <div><%=message%></div>
      <%end%>
    </div>
  <%end%>
  <div>
    <div>
      <%= form.label :tittle %>
      <%= form.text_field :tittle%>
    </div>
    <hr><br>
    <div>
      <%= form.label :body %>
      <%= form.text_area :body%>
    </div>
    <hr><br>
    <div>
      <%= form.submit%>
    </div>
  </div>
<%end%>
